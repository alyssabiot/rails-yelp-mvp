<div class="container padded">
  <%= simple_form_for @restaurant, url: admin_restaurant_path(@restaurant) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
