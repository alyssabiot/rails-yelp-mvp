<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Reviews:</strong>
  <% @restaurant.reviews.each do |review| %>
    <ul>
        <p><%= "*" * review.rating %></p>
        <p><%= review.content %></p>
        <%= link_to "Delete review", admin_restaurant_review_path(@restaurant, review), method: :delete %>
        <%= link_to "Edit review", edit_admin_restaurant_review_path(@restaurant, review) %>
    </ul>
  <% end %>
</p>

<%= link_to "Add a review", new_admin_restaurant_review_path(@restaurant) %>
<%= link_to "Edit restaurant", edit_admin_restaurant_path(@restaurant) %>
<%= link_to "Delete restaurant", admin_restaurant_path(@restaurant), method: :delete %>
<%= link_to 'Back', admin_restaurants_path %>
